<!DOCTYPE html>
<html>
<head>
    <title>OsteoBase</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>

<nav class="navbar navbar-dark bg-dark justify-content-start">
    <a class="navbar-brand" href="/">OsteoBase</a>
    <% if (currentUser) { %>
        <a href="/logout" class="btn btn-sm btn-secondary">Logout</a>
    <% } %>
    <form class="form-inline ml-auto" id="search">
        <input class="form-control mr-sm-2" type="search" placeholder="Surname" name="keyword" id="search-text" aria-label="Search">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Find Patients</button>
    </form>
</nav>

<div class="container">

    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>Patient Index</h1>
            <button class="btn btn-primary" id="new-patient-button">Add New Patient</button>
        </div>
    </div>

    <form action="/patients" method="POST" id="new-patient-form" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="firstnameIndex">First Name</label>
                <input type="text" class="form-control" name="patient[firstname]" id="firstnameIndex" placeholder="First Name">
            </div>
            <div class="form-group col-md-3">
                <label for="surnameIndex">Surname</label>
                <input type="text" class="form-control" name="patient[surname]" id="surnameIndex" placeholder="Surname">
            </div>
            <div class="form-group col-md-3">
                <label for="dobIndex">Date of Birth</label>
                <input type="date" class="form-control" name="patient[dob]" id="dobIndex" placeholder="Date of Birth">
            </div>
            <div class="form-group col-md-3">
                <label for="phonenumberIndex">Phone</label>
                <input type="tel" class="form-control" name="patient[phonenumber]" id="phonenumberIndex" placeholder="Phone Number">
            </div>
        </div>
        
        <div class="form-group">
            <label for="addressIndex">Address</label>
            <input type="text" class="form-control" name="patient[address]" id="addressIndex" placeholder="Address">
        </div>    

        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="postcodeIndex">Postcode</label>
                <input type="text" class="form-control" name="patient[postcode]" id="postcodeIndex" placeholder="Postcode">
            </div>
            <div class="form-group col-md-3">
                <label for="emailIndex">email</label>
                <input type="email" class="form-control" name="patient[email]" id="emailIndex" placeholder="email">
            </div>
            <div class="form-group col-md-6 align-self-end">    
                <button class="btn btn-success" id="add-new-patient">Add</button>                    
                <div class="btn btn-warning" id="cancel-new-patient">Cancel</div>
            </div>    
        </div>
    </form>   

    <div class="row">
            
        <div class="col-12 list-group" id="patient-list">
            <% patients.forEach(function(patient){ %>
                <a class="list-group-item list-group-item-action list-group-item-light" href="/patients/<%= patient._id %>"><%= patient.firstname + " " + patient.surname %><span class="float-right"><%= moment(patient.dob).format('DD/MM/YYYY') %></span></a>
            <% }); %>
        </div>

    </div>

</div>

<% include ../partials/footer %>