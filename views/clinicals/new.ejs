<% include ../partials/header %>

<div class="container">

<h1>New Clinical Session for <%= patient.firstname + " " + patient.surname %></h1>

    <form action="/patients/<%= patient._id %>/clinicals" method="POST">

        <div class="form-row">
            <div class="form-group col-12">
                <label for="problem-text">Problem:</label>
                <textarea name="clinical[problem]" id="problem-text" class="text-input form-control"></textarea>
            </div>

            <div class="form-group col-12">
                <label for="OE-text">Objective Findings:</label>
                <textarea name="clinical[OE]" id="OE-text" class="text-input form-control" rows="6"></textarea>
            </div>
    
            <div class="form-group col-12">    
                <label for="diag-text">Diagnosis:</label>
                <textarea name="clinical[diag]" id="diag-text" class="text-input form-control"></textarea>    
            </div>

            <div class="form-group col-12">
                <label for="TTT-text">Treatment:</label>
                <textarea name="clinical[TTT]" id="TTT-text" class="text-input form-control" rows="6"></textarea>
            </div>

            <!-- Hidden input for signoff -->
            <input name="clinical[signed_off]" type="hidden" value="false">

            <div class="form-group align-self-end">
                <button class="btn btn-success" id="submit-new-clinical-button">Save</button>
                <a href="/patients/<%= patient._id %>" class="btn btn-warning" id="cancel-new-clinical-button">Cancel</a>
            </div>

        </div>    
    </form>

</div>

<% include ../partials/common-scripts %>
<% include ../partials/footer %>