<% include ../partials/header %>

<div class="container">
    
    <h3><%= patient.firstname + " " + patient.surname %>'s Consultation on <%= moment(interview.date_created).format('DD/MM/YYYY') %></h3>

    <form method="POST" action="/patients/<%= patient._id %>/interviews/<%= interview.id %>?_method=DELETE" id="delete-interview-form" class="delete-form"></form>

    <form class="edit-form" id="edit-interview-form" action="/patients/<%= patient.id %>/interviews/<%= interview.id %>" method="POST" autocomplete="off">
        <div class="form-row">
            
            <div class="form-group col-12">
                <label for="CO-edit">C/O:</label>
                <input id="CO-edit" name="interview[CO]" type="text" class="form-control" value="<%= interview.CO %>" disabled>
            </div>    
        
            <div class="form-group col-md-2">
                <label for="onset-edit">Onset:</label>    
                <input id="onset-edit" name="interview[onset]" type="text" class="form-control" value="<%= interview.onset %>" disabled>
            </div>

            <div class="form-group col-md-10">        
                <label for="reason-edit">Reason:</label>
                <input id="reason-edit" name="interview[reason]" type="text" class="form-control" value="<%= interview.reason %>" disabled>
            </div>

            <div class="form-group col-lg-4">
                <label for="agg-edit">Worse For:</label>        
                <input id="agg-edit" name="interview[agg]" type="text" class="form-control" value="<%= interview.agg %>" disabled>
            </div>
        
            <div class="form-group col-lg-4">        
                <label for="rel-edit">Better For:</label>
                <input id="rel-edit" name="interview[rel]" type="text" class="form-control" value="<%= interview.rel %>" disabled>
            </div>
        
            <div class="form-group col-lg-4">        
                <label for="dp-edit">Daily Pattern:</label>
                <input id="dp-edit" name="interview[dp]" type="text" class="form-control" value="<%= interview.dp %>" disabled>
            </div>

            <div class="form-group col-lg-6">        
                <label for="ph-edit">Previous History:</label>
                <input id="ph-edit" name="interview[ph]" type="text" class="form-control" value="<%= interview.ph %>" disabled>
            </div>

            <div class="form-group col-lg-6">    
                <label for="invest-edit">Investigations:</label>
                <input id="invest-edit" name="interview[invest]" type="text" class="form-control" value="<%= interview.invest %>" disabled>
            </div>        
                    
            <div class="form-group col-lg-6 align-self-end">
                <div class="btn btn-info edit-button" id="edit-interview-button">Edit Medical History</div>
                <button class="btn btn-success submit-edit-button" id="submit-edit-interview-button">Submit</button>
                <div class="btn btn-warning cancel-edit-button" id="cancel-edit-interview-button">Cancel</div>
                <input type="submit" class="btn btn-danger delete-button" id="delete-interview-button" value="Delete" form="delete-interview-form">
            </div>
        
        </div>
    
    </form>

    <div>
        <a class="btn btn-secondary mt-2" href="/patients/<%= patient.id %>">Back to Patient Details</a>
    </div>

</div>

<% include ../partials/footer %>